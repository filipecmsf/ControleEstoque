<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
	
	    <shape
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:shape="rectangle" >
	        <stroke
	            android:width="2dp"
	            android:color="@color/azulPlayGoogleClicked" />
	
	        <gradient
	            android:angle="90"
	            android:endColor="@color/azulPlayGoogleClicked"
	            android:startColor="@color/azulPlayGoogleClicked" />
	
	        <corners
	            android:bottomLeftRadius="0dp"
	            android:bottomRightRadius="0dp"
	            android:topLeftRadius="0dp"
	            android:topRightRadius="0dp" />
	
	        <padding
	            android:bottom="20dp"
	            android:left="20dp"
	            android:right="20dp"
	            android:top="20dp" />
	    </shape>
	
	</item>
	
	<item android:state_focused="true">
	
	    <shape
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:shape="rectangle" >
	        <stroke
	            android:width="2dp"
	            android:color="@color/azulPlayGoogleClicked" />
	
	        <gradient
	            android:angle="90"
	            android:endColor="@color/azulPlayGoogleClicked"
	            android:startColor="@color/azulPlayGoogleClicked" />
	
	        <corners
	            android:bottomLeftRadius="0dp"
	            android:bottomRightRadius="0dp"
	            android:topLeftRadius="0dp"
	            android:topRightRadius="0dp" />
	
	        <padding
	            android:bottom="20dp"
	            android:left="20dp"
	            android:right="20dp"
	            android:top="20dp" />
	    </shape>
	
	</item><item>
	
	    <shape
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:shape="rectangle" >
	        <stroke
	            android:width="2dp"
	            android:color="@color/azulPlayGoogle" />
	
	        <gradient
	            android:angle="90"
	            android:endColor="@color/azulPlayGoogle"
	            android:startColor="@color/azulPlayGoogle" />
	
	        <corners
	            android:bottomLeftRadius="0dp"
	            android:bottomRightRadius="0dp"
	            android:topLeftRadius="0dp"
	            android:topRightRadius="0dp" />
	
	        <padding
	            android:bottom="20dp"
	            android:left="20dp"
	            android:right="20dp"
	            android:top="20dp" />
	    </shape>
	
	</item>
</selector>